<section class="relative py-20 px-8 overflow-hidden" id="partners">
  <!-- Оранжевый фон с неоном -->
  <div class="absolute inset-0 z-0">
    <img src="/tournament/partners.png" alt="" class="w-full h-full object-cover" />
  </div>

  <div class="relative z-10 max-w-7xl mx-auto">
    <!-- Заголовок -->
    <div class="text-center mb-12">
      <h2 class="text-6xl md:text-7xl font-bold text-white uppercase mb-2 leading-none">
        партнеры
      </h2>
      <p class="text-base text-white font-semibold">
        Официальная атрибутика турнира
      </p>
    </div>

    <!-- Карточки партнёров - ЧЕРНЫЕ с ОРАНЖЕВЫМИ РАМКАМИ -->
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4 mb-12">
      {partnerItems.map((item) => (
        <a 
          href={item.link}
          class="aspect-square bg-black border-2 border-tournament-orange rounded-lg hover:scale-105 hover:shadow-2xl hover:border-orange-400 transition-all duration-300 flex items-center justify-center"
        >
          {item.image && (
            <img src={item.image} alt="" class="w-full h-full object-contain p-4" />
          )}
        </a>
      ))}
    </div>

    <!-- Кнопки - ОРАНЖЕВЫЕ -->
    <div class="flex flex-col md:flex-row gap-6 justify-center items-center">
      <Button variant="primary" size="md">
        Стать партнером проекта
      </Button>
      <Button variant="primary" size="md">
        задать вопрос
      </Button>
    </div>
  </div>
</section>
